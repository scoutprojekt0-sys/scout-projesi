DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=phpstorm_workshop
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Environment
# dev: display_errors acik, hizli debug
# prod: display_errors kapali, hatalar logs/app.log dosyasina yazar
APP_ENV=dev
APP_DEBUG=1

# Session security
# Kullanici islemsiz kaldiginda timeout (saniye)
SESSION_TIMEOUT_SECONDS=1800

# Auth hardening
SESSION_COOKIE_SAMESITE=Strict
LOGIN_RATE_LIMIT_WINDOW_SECONDS=900
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
LOGIN_RATE_LIMIT_LOCK_SECONDS=900

# Admin role cache
ADMIN_ROLE_CACHE_TTL_SECONDS=120
